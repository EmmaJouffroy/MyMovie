<p id="notice"><%= notice %></p>

<p>
  <strong>Film:</strong>
  <%= @post.film %>
</p>

<p>
  <strong>Citation:</strong>
  <%= @post.citation %>
</p>

<p>
  <strong>Realisateur:</strong>
  <%= @post.realisateur %>
</p>

<p>
  <strong>Vos tags:</strong>
  <% @post.tags.each do |t| %>
    <%= link_to t.title, post_tag_path(t) %>
  <% end %>
</p>

<p>
  <%= image_tag(@post.image, width: 100)%>
</p>



